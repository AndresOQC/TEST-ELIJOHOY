# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN - ELIJOHOY
# =============================================================================
# Este archivo debe estar en la raíz del proyecto: ~/elijohoy/.env.production
# Docker Compose lo usará para configurar todos los servicios

# =============================================================================
# ENTORNO
# =============================================================================
FLASK_ENV=production
FLASK_APP=app.py

# =============================================================================
# BASE DE DATOS POSTGRESQL
# =============================================================================
POSTGRES_USER=elijohoy_user
POSTGRES_PASSWORD=CAMBIAR_PASSWORD_SEGURO_POSTGRES
POSTGRES_DB=elijohoy_db

# =============================================================================
# BACKEND - URLs y CORS
# =============================================================================
FRONTEND_URL=https://elijohoy.com:8443
PASSWORD_RESET_URL=https://elijohoy.com:8443/auth/restablecer-password
PASSWORD_RESET_TOKEN_EXPIRES=3600
ALLOWED_ORIGINS=https://elijohoy.com:8443,http://elijohoy.com:8080,https://www.elijohoy.com:8443,http://www.elijohoy.com:8080,https://elijohoy.com,http://elijohoy.com

# =============================================================================
# SEGURIDAD - ¡CAMBIAR ESTOS VALORES!
# =============================================================================
# Genera valores únicos con: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CAMBIAR_ESTE_SECRET_KEY_SUPER_SEGURO_GENERA_UNO_NUEVO
JWT_SECRET_KEY=CAMBIAR_ESTE_JWT_SECRET_KEY_SUPER_SEGURO_GENERA_UNO_NUEVO

# JWT Expiración (en segundos)
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=andresquilichechavez@gmail.com
MAIL_PASSWORD=trjnrbmctucbzelf
MAIL_DEFAULT_SENDER=andresquilichechavez@gmail.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATELIMIT_STORAGE_URL=memory://

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =============================================================================
# PUERTO DEL SERVIDOR
# =============================================================================
PORT=5001

# =============================================================================
# INSTRUCCIONES:
# =============================================================================
# 1. Edita este archivo directamente (NO necesitas renombrarlo)
# 2. Genera SECRET_KEY: python3 -c "import secrets; print(secrets.token_hex(32))"
# 3. Genera JWT_SECRET_KEY: python3 -c "import secrets; print(secrets.token_hex(32))"
# 4. Cambia POSTGRES_PASSWORD a una contraseña segura
# 5. Ejecuta: ./deploy-contabo.sh
# =============================================================================
