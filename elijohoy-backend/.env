# =============================================================================
# CONFIGURACIÓN DE ENTORNO
# =============================================================================
# Cambia esta variable para cambiar entre desarrollo y producción
# Valores permitidos: development, production
FLASK_ENV=development
FLASK_APP=app.py

# =============================================================================
# SEGURIDAD - ¡CAMBIAR EN PRODUCCIÓN!
# =============================================================================
SECRET_KEY=tu-super-secreto-flask-key-aqui
JWT_SECRET_KEY=tu-super-secreto-jwt-key-aqui-cambialo-en-produccion

# JWT Expiración (en segundos)
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutos
JWT_REFRESH_TOKEN_EXPIRES=3600  # 1 hora

# =============================================================================
# BASE DE DATOS
# =============================================================================
# Para desarrollo local (Docker)
DATABASE_URL=postgresql://elijohoy_user:elijohoy_password@db:5432/elijohoy_db

# Para producción (Contabo)
PRODUCTION_DATABASE_URL=postgresql://elijohoy_user:elijohoy_password@db:5432/elijohoy_db

# =============================================================================
# URLs DE FRONTEND Y BACKEND
# =============================================================================
# URL del frontend (usado para CORS y emails)
# Desarrollo: http://localhost:9000
# Producción: https://elijohoy.com
FRONTEND_URL=http://localhost:9000

# URL para reseteo de contraseña (enviada por email)
# Desarrollo: http://localhost:9000
# Producción: https://elijohoy.com
PASSWORD_RESET_URL=http://localhost:9000
PASSWORD_RESET_TOKEN_EXPIRES=3600

# =============================================================================
# CORS - ORIGENES PERMITIDOS
# =============================================================================
# En desarrollo incluye localhost, en producción solo el dominio
# Formato: separados por coma sin espacios
# Desarrollo: http://localhost:9000,http://127.0.0.1:9000
# Producción: https://elijohoy.com,https://www.elijohoy.com
ALLOWED_ORIGINS=http://localhost:9000,http://127.0.0.1:9000,http://localhost:5001

# =============================================================================
# CONFIGURACIÓN DE EMAIL (SMTP)
# =============================================================================
# =============================================================================
# CONFIGURACIÓN DE EMAIL (SMTP)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=andresquilichechavez@gmail.com
MAIL_PASSWORD=trjnrbmctucbzelf
MAIL_DEFAULT_SENDER=andresquilichechavez@gmail.com

# =============================================================================
# RATE LIMITING Y CACHE
# =============================================================================
RATELIMIT_STORAGE_URL=memory://

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =============================================================================
# NOTAS PARA CAMBIAR A PRODUCCIÓN:
# =============================================================================
# 1. Cambiar FLASK_ENV=production
# 2. Actualizar FRONTEND_URL=https://elijohoy.com
# 3. Actualizar PASSWORD_RESET_URL=https://elijohoy.com
# 4. Actualizar ALLOWED_ORIGINS=https://elijohoy.com,https://www.elijohoy.com
# 5. Cambiar SECRET_KEY y JWT_SECRET_KEY a valores únicos y seguros
# 6. Actualizar DATABASE_URL si es necesario
# =============================================================================
